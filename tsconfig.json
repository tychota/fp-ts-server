{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
		"allowJs": true,
		"noEmit": false,
		"isolatedModules": true,
		"esModuleInterop": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "pretty": true,
    "removeComments": false,
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "baseUrl": "./src"
  },
  "include": ["src/**/*.ts", "typings/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
